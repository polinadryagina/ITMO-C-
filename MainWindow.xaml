<Window x:Class="WpfCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="lstHistory" Grid.Row="0"/>
        <TextBox x:Name="txtInput" Grid.Row="1"/>
        <Button x:Name="btnEnter" Grid.Row="1" Grid.Column="1" Content="Enter" Click="btnEnter_Click"/>
        <Button x:Name="btnSave" Grid.Row="1" Grid.Column="2" Content="Save" Click="btnSave_Click"/>
        <Button x:Name="btnLoad" Grid.Row="1" Grid.Column="3" Content="Load" Click="btnLoad_Click"/>
    </Grid>
</Window>